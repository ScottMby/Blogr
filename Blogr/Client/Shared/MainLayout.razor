@using Blogr.Shared
@inherits LayoutComponentBase
@inject NavigationManager NavMan
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<div class="page">

    <main>
        <div class="top-row px-4 auth">
            <a class="d-inline text-start m-0" @onclick="GoHome" target="_blank">Home</a>
            <div>
                <InputText @bind-Value="searchInput"></InputText>
                <button @onclick="Search" type="submit">Search</button>
            </div>
            <div>
                <LoginDisplay />
                <AuthorizeView>
                    <Authorized>
                        <a @onclick="CreateBlog" target="_blank">Create</a>
                        <a @onclick="Notifications" target="_blank">Notification</a>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string searchInput { get; set; }

    private void CreateBlog()
    {
        NavMan.NavigateTo("/createBlog");
    }
    private void Notifications()
    {
        NavMan.NavigateTo("/notifications");
    }
    private void GoHome()
    {
        NavMan.NavigateTo("/");
    }

    public void Search()
    {
        NavMan.NavigateTo("/search/" + searchInput);
    }
}