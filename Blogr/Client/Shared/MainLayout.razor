@using Blogr.Shared
@inherits LayoutComponentBase
@inject NavigationManager NavMan
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<div class="page">

    <main>
        <div class="top-row px-4">
            <a class="d-inline-flex text-start m-0 text-white" @onclick="GoHome" target="_blank">Home</a>
            <div class="flex-grow-1 text-center">
                <InputText class="w-70" @bind-Value="searchInput"></InputText>
                <button @onclick="Search" type="submit">Search</button>
            </div>
            <div>
                <LoginDisplay />
                <AuthorizeView>
                    <Authorized>
                        <a class="text-white" @onclick="CreateBlog" target="_blank">Create</a>
                        <a class="text-white" @onclick="Notifications" target="_blank">Notification</a>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string searchInput { get; set; }

    private void CreateBlog()
    {
        NavMan.NavigateTo("/createBlog");
    }
    private void Notifications()
    {
        NavMan.NavigateTo("/notifications");
    }
    private void GoHome()
    {
        NavMan.NavigateTo("/");
    }

    public void Search()
    {
        if (string.IsNullOrWhiteSpace(searchInput))
        {
            Console.WriteLine("No search value entered");
        }
        else
        {
            NavMan.NavigateTo("/");
            NavMan.NavigateTo("/search/" + searchInput);
        }
    }
}